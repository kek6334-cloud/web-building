{
  "compilerOptions": {
    "target": "ES2020",  // 編譯成 ES2020 版本
    "lib": ["dom", "esnext"],  // 使用的庫，支援 ESNext 和 DOM 操作
    "allowJs": true,  // 允許 JavaScript 檔案
    "skipLibCheck": true,  // 跳過庫檢查，提升編譯速度
    "strict": true,  // 開啟 TypeScript 嚴格模式
    "noEmit": true,  // 不會產生編譯結果，僅進行類型檢查
    "esModuleInterop": true,  // 使 TypeScript 支援 ES 模組
    "module": "esnext",  // 使用 ESNext 模組系統
    "moduleResolution": "bundler",  // 模組解析方式
    "resolveJsonModule": true,  // 支援解析 JSON 模組
    "isolatedModules": true,  // 確保每個檔案可以獨立編譯
    "jsx": "preserve"  // 保留 JSX 語法（適用於 React）
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],  // 包括所有 TypeScript 檔案
  "exclude": ["node_modules", ".next"]  // 排除 node_modules 和 .next 目錄
}
